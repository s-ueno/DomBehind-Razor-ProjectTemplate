@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SPAViews {
    <nav id="Titlebar" class="navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" id="AppBrand">
                    DOM Behind
                </a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a id="ContactButton">CONTACT</a></li>
                <li><a id="SignOutButton">SIGN OUT</a></li>
            </ul>
        </div>
    </nav>
}

@section Scripts{
    <script>
        // Assign View-ViewModel to the above <div id = "Titlebar" ...
        // $.BindingAnnotation("#Titlebar", () => DomBehind.RazorTemplate.Home.TitlebarView, () => DomBehind.RazorTemplate.Home.TitlebarViewModel)

        // Since lambda description in the script tag is not supported by IE, it is declared with the old description method
        $.BindingAnnotation("#Titlebar", function () { return DomBehind.RazorTemplate.Home.TitlebarView; }, function () { return DomBehind.RazorTemplate.Home.TitlebarViewModel; })
    </script>
}


